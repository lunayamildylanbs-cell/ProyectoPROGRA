<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Bienvenida" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <Image Source="/Images/fondo.png" Stretch="UniformToFill"/>
        <Grid>
            <Image Source="/Images/Logo.png" Margin="6,10,635,317"/>


            <TextBlock Text="PELICULAS Y SERIES"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,50,0,0"
                       HorizontalAlignment="Center"/>

            <TextBlock Foreground="White"
                       TextAlignment="Center"
                       FontSize="15"
                       Margin="100,145,100,0"
                       VerticalAlignment="Top"
                       FontFamily="Eras Bold ITC">
                <Run Text="Aquí encontrarás películas para todos los gustos"/>
                <LineBreak/>
                <Run Text="Explora nuestro amplio catálogo y disfruta del entretenimiento como nunca"/>
            </TextBlock>

            <Button Content="INICIAR SESIÓN"
                    Width="160" Height="40"
                    Background="Red"
                    Foreground="White"
                    Cursor="Hand"
                    Margin="0,260,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"/>

            <TextBlock Text="¿Ya tienes una cuenta? Inicia Sesión"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,330,0,0"
                       HorizontalAlignment="Center"/>
        </Grid>

    </Grid>
</Window>
